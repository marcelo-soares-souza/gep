<%- model_class = Modelo -%>

<% if ! @modelos.present? then %>

  <center><h3>Nenhum Modelo Cadastrado. <%= link_to "Cadastre agora", new_modelo_path %>.</h3></center>

<% else %>

  <%= link_to t('.new', :default => t("helpers.links.new")), new_modelo_path, :class => 'btn btn-primary' %>
  <hr/>

  <table class="table table-striped">
  <thead>
    <tr>
      <th>#</th>
      <th>Nome</th> 
      <th>Equipamentos</th> 
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @modelos.each do |modelo| %>
      <tr>
        <td><%= link_to modelo.id, modelo_path(modelo) %></td>
        <td><%= link_to modelo.nome, modelo_path(modelo) %></td>
        <td><%= modelo.equipamento.count %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_modelo_path(modelo), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      modelo_path(modelo),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
  </table>
<% end %>
