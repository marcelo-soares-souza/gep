<%- model_class = Equipamento -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:item) %></th>
      <th><%= model_class.human_attribute_name(:patrimonio) %></th>
      <th><%= model_class.human_attribute_name(:numero_serie) %></th>
      <th><%= model_class.human_attribute_name(:especificacao) %></th>
      <th><%= model_class.human_attribute_name(:observacao) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @equipamentos.each do |equipamento| %>
      <tr>
        <td><%= link_to equipamento.id, equipamento_path(equipamento) %></td>
        <td><%= equipamento.item %></td>
        <td><%= equipamento.patrimonio %></td>
        <td><%= equipamento.numero_serie %></td>
        <td><%= equipamento.especificacao %></td>
        <td><%= equipamento.observacao %></td>
        <td><%=l equipamento.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_equipamento_path(equipamento), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      equipamento_path(equipamento),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_equipamento_path,
            :class => 'btn btn-primary' %>
