<%- model_class = Equipamento -%>
<div class="page-header">
  <h3><%#= @equipamento.item %></h3>
</div>

<dl class="dl-horizontal">
  <dt><strong>Tipo:</strong></dt>
  <dd><%= @equipamento.tipo.nome %></dd>

  <dt><strong>Marca:</strong></dt>
  <dd><%= @equipamento.marca.nome %></dd>

  <dt><strong>Modelo:</strong></dt>
  <dd><%= @equipamento.modelo.nome %></dd>

  <dt><strong>Patrimônio:</strong></dt>
  <dd><%= @equipamento.patrimonio %></dd>

  <dt><strong>Número de Série:</strong></dt>
  <dd><%= @equipamento.numero_serie %></dd>

  <dt><strong>Observação:</strong></dt>
  <dd><%= @equipamento.observacao %></dd>

  <dt><strong>Retirada:</strong></dt>
  <dd><%= @equipamento.local_retirada %></dd>

  <dt><strong>Última Modificação:</strong></dt>
  <dd><%= @equipamento.updated_at %></dd>

</dl>

<hr/>
<%= link_to t('.back', :default => t("helpers.links.back")),
              equipamentos_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_equipamento_path(@equipamento), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              equipamento_path(@equipamento),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
