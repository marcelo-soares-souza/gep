<%- model_class = Equipamento -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:item) %>:</strong></dt>
  <dd><%= @equipamento.item %></dd>
  <dt><strong><%= model_class.human_attribute_name(:patrimonio) %>:</strong></dt>
  <dd><%= @equipamento.patrimonio %></dd>
  <dt><strong><%= model_class.human_attribute_name(:numero_serie) %>:</strong></dt>
  <dd><%= @equipamento.numero_serie %></dd>
  <dt><strong><%= model_class.human_attribute_name(:especificacao) %>:</strong></dt>
  <dd><%= @equipamento.especificacao %></dd>
  <dt><strong><%= model_class.human_attribute_name(:observacao) %>:</strong></dt>
  <dd><%= @equipamento.observacao %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              equipamentos_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_equipamento_path(@equipamento), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              equipamento_path(@equipamento),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
