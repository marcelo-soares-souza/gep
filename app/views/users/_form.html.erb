<%= form_for @user, :html => { :class => "form-horizontal user" } do |f| %>

    <% if @user.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@user.errors.count, "error") %> encontrado(s):</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :nome, "Nome", :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :nome, :class => 'form-control' %>
    </div>
    <%= error_span(@user[:nome]) %>
  </div>

  <div class="control-group">
    <%= f.label :email, "E-Mail", :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :email, :class => 'form-control' %>
    </div>
    <%= error_span(@user[:email]) %>
  </div>

  <div class="control-group">
    <%= f.label :cpf, "CPF",  :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :cpf, :class => 'form-control' %>
    </div>
    <%= error_span(@user[:cpf]) %>
  </div>

  <% if action_name == "new" %>
    <div class="control-group">
      <%= f.label :password, "Senha", :class => 'control-label' %>
      <div class="controls">
        <%= f.password_field :password, :class => 'form-control' %>
      </div>
      <%= error_span(@user[:password]) %>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :admin, "Administrador", :class => 'control-label' %>
    <div class="controls">
      <%= f.select :admin, { 'NÃ£o' => false, 'Sim' => true }, {}, { :class => 'form-control' } %>
    </div>
    <%= error_span(@user[:admin]) %>
  </div>

  <br/>
  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")), users_path, :class => 'btn btn-default' %>

<% end %>
