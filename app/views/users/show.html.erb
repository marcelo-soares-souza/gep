<%- model_class = User -%>
<div class="page-header">
  <h3><%= @user.nome %></h3>
</div>

<dl class="dl-horizontal">
  <dt><strong>CPF:</strong></dt>
  <dd><%= @user.cpf %></dd>
  <dt><strong>E-Mail:</strong></dt>
  <dd><%= @user.email %></dd>
  <dt><strong>Administrador:</strong></dt>
  <dd><%= I18n.t(@user.admin.to_s) %></dd>
  <% if @user.equipes.present? %>
    <dt>Projetos:</dt>
    <dd>
      <%= @user.equipes.collect{|equipe| equipe.projeto.titulo}.to_sentence %>
    </dd>
  <% end %>

</dl>

<hr/>
<%= link_to t('.back', :default => t("helpers.links.back")),
              users_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_user_path(@user), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              user_path(@user),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
