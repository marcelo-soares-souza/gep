<%= nav_bar brand: "GEP", responsive: true do %>
    <%= menu_group pull: :left do %>

      <% if user_signed_in? then %>
        <% if ! current_user.admin? then %>
          <%= menu_item "Registrar Ponto", registrar_pontos_path %>
          <%= menu_item "Solicitar Equipamento", emprestimos_path %>
        <% end %>

        <% if current_user.admin? then %>

          <%= drop_down "Equipamentos" do %>
            <%= menu_item "Administrar", equipamentos_path %>
            <%= menu_item "Empréstimos/Reservas", emprestimos_path %>
          <% end %>

          <%= drop_down "Projetos" do %>
            <%= menu_item "Administrar", projetos_path %>
            <%= menu_item "Usuários", users_path %>
            <%= menu_item "Equipes", equipes_path %>
            <%= menu_item "Pontos", relatorio_pontos_path %>
          <% end %>

        <% end %>

      <% end %>

    <% end %>

    <%= menu_group pull: :right do %>
      <% if user_signed_in? then %>
        <%= menu_item "Deslogar (#{current_user.nome})", destroy_user_session_path %>
      <% else %>
        <%= menu_item "Logar", new_user_session_path %>
      <% end %>
  <% end %>
<% end %>
