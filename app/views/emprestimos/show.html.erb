<%- model_class = Emprestimo -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:user_id) %>:</strong></dt>
  <dd><%= @emprestimo.user.nome %></dd>
  <dt><strong><%= model_class.human_attribute_name(:equipamento_id) %>:</strong></dt>
  <dd><%= @emprestimo.equipamento.item %></dd>
  <dt><strong><%= model_class.human_attribute_name(:data_inicio) %>:</strong></dt>
  <dd><%= I18n.l(@emprestimo.data_inicio) %></dd>
  <dt><strong><%= model_class.human_attribute_name(:data_fim) %>:</strong></dt>
  <dd><%= I18n.l(@emprestimo.data_fim) %></dd>
  <dt><strong><%= model_class.human_attribute_name(:situacao) %>:</strong></dt>
  <dd><%= @emprestimo.situacao.humanize %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              emprestimos_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_emprestimo_path(@emprestimo), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              emprestimo_path(@emprestimo),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
