<%- model_class = Projeto -%>
<div class="page-header">
  <h3><%=t '.title', :default => model_class.model_name.human.titleize %></h3>
</div>

<dl class="dl-horizontal">
  <dt><strong>Título:</strong></dt>
  <dd><%= @projeto.titulo %></dd>
  <dt><strong>Data Início:</strong></dt>
  <dd><%= I18n.l(@projeto.data_inicio) %></dd>
  <dt><strong>Data Fim:</strong></dt>
  <dd><%= I18n.l(@projeto.data_fim) %></dd>
  <% if @projeto.equipes.present? %>
    <dt>Participantes:</dt>
    <dd>
      <%= @projeto.equipes.collect{|equipe| equipe.user.nome}.to_sentence %>
    </dd>
  <% end %>
</dl>

<hr/>
<%= link_to t('.back', :default => t("helpers.links.back")),
              projetos_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_projeto_path(@projeto), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              projeto_path(@projeto),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>

<%= link_to 'Adicionar Membros a Equipe', new_equipe_path, :class => 'btn btn-success' %>
